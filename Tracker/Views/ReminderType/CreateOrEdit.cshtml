@using Tracker.Data
@using Microsoft.AspNetCore.Identity
@model Tracker.Models.ReminderType?
@inject ApplicationDbContext _db
@inject UserManager<ApplicationUser> _userManager

@{
  ViewBag.Title = $"Edit {Model?.Name ?? "Reminder Type"}";
  Layout = "_Layout";
}

<h2>Edit Reminder</h2>

@if (Model == null)
{
  <div class="alert alert-danger" role="alert">
    Type not found. <a asp-action="List">Return to list.</a>
  </div>
  return;
}

<form asp-action="CreateOrEdit" method="post">
  <div class="mb-3">
    <label asp-for="Name" class="form-label">Name</label>
    <input type="text" required class="form-control" asp-for="Name">
    <span asp-validation-for="Name" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
</form>